<Page x:Class="ApplicationWPF.Frames.PlayPageFrame.PariOnePlayer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="600"
	Title="PariOnePlayer">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="Bourse :" Style="{StaticResource StarWarsFontStyle}"/>
        <TextBox x:Name="Bourse_j1" Text="10000" Grid.Column="1" Height="50" Background="Transparent" BorderBrush="Red" Foreground="White" FontSize="30" MouseLeave="Bourse_j1_LostFocus" LostFocus="Bourse_j1_LostFocus"/>
    </Grid>
</Page>
