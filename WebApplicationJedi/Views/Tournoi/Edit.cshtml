@model Tuple<WebApplicationJedi.Models.TournoiViewModel, WebApplicationJedi.Models.JediCollection, WebApplicationJedi.Models.StadeCollection>

<!--
    Item1 -> Tournoi
    Item2 -> JediCollection
    Item3 -> StadeCollection
-->

@{
    ViewBag.Title = "Edit";
}

<h2>Modifier un Tournoi</h2>
<hr />

@using(Html.BeginForm(Model.Item1)) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(Model => Model.Item1.Id)

        <div class="form-group">
            <div class="col-xs-2">
                @Html.LabelFor(Model => Model.Item1.Nom)
            </div>
            <div class="col-xs-10">
                @Html.EditorFor(Model => Model.Item1.Nom)
                @Html.ValidationMessageFor(Model => Model.Item1.Nom)
            </div>
        </div>

        @{  <!-- Creation de la liste deroulante et selection de la valeur par defaut -->
            List<SelectListItem> jediSelector = new List<SelectListItem>();
            foreach(var j in Model.Item2.list) {
                SelectListItem i = new SelectListItem();
                i.Value = Convert.ToString(j.Id);
                i.Text = j.Nom;
                jediSelector.Add(i);
            }

            List<SelectListItem> stadeSelector = new List<SelectListItem>();
            foreach(var s in Model.Item3.list) {
                SelectListItem i = new SelectListItem();
                i.Value = Convert.ToString(s.Id);
                i.Text = s.Planete;
                stadeSelector.Add(i);
            }
        }

        <!-- Les matchs pour les Huitieme -->
        @for(int i = (int)WebApplicationJedi.ServiceReference.EPhaseTournoi.HuitiemeFinale1; i >= (int)WebApplicationJedi.ServiceReference.EPhaseTournoi.HuitiemeFinale8; i--) {
            <strong>Match : @((WebApplicationJedi.ServiceReference.EPhaseTournoi)i)</strong>
            <div class="row">
                <!-- Jedi 1 -->
                <div class="col-xs-2">
                    @Html.DisplayNameFor(Model => Model.Item1.Matches.Default.Jedi1)
                </div>
                <div class="col-xs-10">
                    @{  <!-- Je copie la liste pour modifier celui qui est select de base -->
                        List<SelectListItem> tmp = new List<SelectListItem>(jediSelector);
                        tmp.First(x => Convert.ToInt32(x.Value) == Model.Item1.Matches.list.First(y => ((int)y.Phase) == i).Jedi1.Id).Selected = true;
                    }
                    @Html.DropDownList("jedi1for" + i, tmp)

                </div>
            </div>
            <div class="row">
                <!-- Jedi 2-->
                <div class="col-xs-2">
                    @Html.DisplayNameFor(Model => Model.Item1.Matches.Default.Jedi2)
                </div>
                <div class="col-xs-10">
                    @{  <!-- Je copie la liste pour modifier celui qui est select de base -->    
                        List<SelectListItem> tmp2 = new List<SelectListItem>(jediSelector);
                        tmp2.First(x => Convert.ToInt32(x.Value) == Model.Item1.Matches.list.First(y => ((int)y.Phase) == i).Jedi2.Id).Selected = true;
                    }
                    @Html.DropDownList("jedi2for" + i, tmp2)
                </div>
            </div>
            <div class="row">
                <!-- Stade -->
                <div class="col-xs-2">
                    @Html.DisplayNameFor(Model => Model.Item1.Matches.Default.Stade)
                </div>
                <div class="col-xs-10">
                    @{  <!-- Je copie la liste pour modifier celui qui est select de base -->    
                        List<SelectListItem> tmpS = new List<SelectListItem>(stadeSelector);
                        tmpS.First(x => Convert.ToInt32(x.Value) == Model.Item1.Matches.list.First(y => ((int)y.Phase) == i).Stade.Id).Selected = true;
                    }
                    @Html.DropDownList("stadefor" + i, tmpS)
                </div>
            </div>
            <hr />
        }

        <!-- Les autres matchs-->
        @for(int i = (int)WebApplicationJedi.ServiceReference.EPhaseTournoi.QuartFinale1; i >= (int)WebApplicationJedi.ServiceReference.EPhaseTournoi.Finale; i--) {
            <strong>Match : @((WebApplicationJedi.ServiceReference.EPhaseTournoi)i)</strong>
            <div class="row">
                <!-- Stade -->
                <div class="col-xs-2">
                    @Html.DisplayNameFor(Model => Model.Item1.Matches.Default.Stade)
                </div>
                <div class="col-xs-10">
                    @{  <!-- Je copie la liste pour modifier celui qui est select de base -->    
                        List<SelectListItem> tmpS = new List<SelectListItem>(stadeSelector);
                        tmpS.First(x => Convert.ToInt32(x.Value) == Model.Item1.Matches.list.First(y => ((int)y.Phase) == i).Stade.Id).Selected = true;
                    }
                    @Html.DropDownList("stadefor" + i, tmpS)
                </div>
            </div>
            <hr />
        }

        <div>
            <div class="btn btn-default">
                @Html.ActionLink("Annuler", "Index")
            </div>
            <input type="submit" value="Créer" class="btn btn-success" />
        </div>

    </div>

            }
