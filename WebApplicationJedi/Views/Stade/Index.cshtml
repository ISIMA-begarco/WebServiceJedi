@model WebApplicationJedi.Models.StadeCollection

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h2>Gestion des Stades</h2>

    <p>Voici la liste des Stades afin de les modifier ou supprimer.</p>

    <a class="col-lg-12 btn btn-success" href='@Url.Action("Create", "Stade", new { id = 0 })'>Créer un nouveau Stade</a>
</div>

@foreach(var s in Model.list) {
    <div class="panel-primary">
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-6 text-left">
                    @Html.DisplayFor(Model => s.Planete)
                </div>
                <div class="col-lg-6 text-right">
                    @Html.ActionLink("Modifier", "Edit", new { id = s.Id }) | 
                    @Html.ActionLink("Supprimer", "Delete", new { id = s.Id })
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                @Html.DisplayNameFor(Model => Model.Default.NbPlaces) : @Html.DisplayFor(Model => s.NbPlaces)
            </div>

            @Html.DisplayNameFor(Model => Model.Default.Caracteristiques)
            <table class="table table-striped">
                <tr>
                    <th>@Html.DisplayNameFor(Model => Model.Default.Caracteristiques.Default.Nom)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Default.Caracteristiques.Default.Definition)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Default.Caracteristiques.Default.Valeur)</th>
                </tr>

                @foreach(var c in s.Caracteristiques.list) {
                    <tr>bleu
                        <td>@c.Nom</td>
                        <td>@c.Definition</td>
                        <td>@c.Valeur</td>
                    </tr>
                }

            </table>
        </div>
    </div>
}